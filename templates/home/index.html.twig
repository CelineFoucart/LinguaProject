{% extends 'base.html.twig' %}

{% block title %}Accueil |
	{{ parent() }}
{% endblock %}

{% block header %}
    {% if settings.banner %}
        {% set banner_file = vich_uploader_asset(settings, 'bannerFile') %}
        {% set bg_header = 'background: linear-gradient(to bottom, rgba(0, 0, 0, 0.85), rgba(54, 54, 54, 0.3)),url("'~banner_file~'") center center / cover no-repeat;' %}
    {% else %}
        {% set bg_header = 'background:rgb(90 90 90)' %}
    {% endif %}

	<header class="home-header" style="{{bg_header}}">
        <h1 class="display-1">{{ settings.languageTranslatedName }}</h1>
        <p class="lead">{{ settings.languageOriginalName }}</p>
    </header>
{% endblock %}

{% block body %}
	<article>
		<div class="lead">{{ settings.languageDescription|raw }}</div>
        <hr>
		<h2 class="text-center h1 mt-5">Consulter les sections</h2>
		<div id="container-fluid">

			<div class="row mt-4">
				{% for category in categories %}
                    <div class="col-4 pt-2">
                        <div class="category__item position-relative">
                            <div class="item border bg-light">
                                <div class="item__body">
                                    <div class="item__title">
                                        <a href="" class="text-decoration-none text-reset stretched-link">
                                            {{ category.title }} <i class="fas fa-fw fa-external-link-alt"></i>
                                        </a>
                                    </div>
                                    <div class="item__description">
                                        <p>{{ category.description }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
			</div>
		</div>
	</article>
{% endblock %}
