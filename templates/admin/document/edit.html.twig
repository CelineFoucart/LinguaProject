{% extends 'admin_layout.html.twig' %}

{% block title %}Editer un document{% endblock %}

{% block page_title %}Editer <strong>{{ document.title }}</strong>{% endblock %}

{% block breadcrumb_items %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb justify-content-end">
            <li class="breadcrumb-item"><a href="{{ path('app_admin_dashboard') }}">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_document_admin_index') }}">Document</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_document_admin_show', {id: document.id}) }}">{{ document.title }}</a></li>
            <li class="breadcrumb-item active">Editer</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <div class="float-end">
                {{ include('/admin/document/_delete_form.html.twig') }}
            </div>
            <h2 class="card-title">
                Editer un document de <a href="{{ path('app_admin_article_show', {id: document.article.id}) }}">{{ document.article.title }}</a>
            </h2>
        </div>
        <div class="card-body">
            {{ include('/admin/document/_form.html.twig', {'button_label': 'Modifier'}) }}
        </div>
    </div>
{% endblock %}
