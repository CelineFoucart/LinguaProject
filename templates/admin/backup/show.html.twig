{% extends 'admin_layout.html.twig' %}

{% block title %}Voir "{{ backup.filename }}"{% endblock %}

{% block page_title %}Sauvegarde <strong>{{ backup.filename }}</strong>{% endblock %}

{% block breadcrumb_items %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb justify-content-end">
            <li class="breadcrumb-item"><a href="{{ path('app_admin_dashboard') }}">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_backup_admin_index') }}">Sauvegardes</a></li>
            <li class="breadcrumb-item active">{{ backup.filename }}</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <div class="float-end">
                <a href="{{ path('app_backup_admin_download', {'id': backup.id}) }}" class="btn btn-success btn-sm">
                    <i class="fas fa-download"></i> Télécharger
                </a>
                {{ include('/admin/backup/_delete_form.html.twig') }}
            </div>
            <h2 class="card-title">Sauvegarde <em>{{ backup.filename }}</em></h2>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped m-0">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ backup.id }}</td>
                    </tr>
                    <tr>
                        <th>Fichier</th>
                        <td>{{ backup.filename }}</td>
                    </tr>
                    <tr>
                        <th>Date</th>
                        <td>{{ backup.createdAt|date('d/m/Y H:i') }}</td>
                    </tr>
                </tbody>
            </table>
        </div> 
    </div>
{% endblock %}