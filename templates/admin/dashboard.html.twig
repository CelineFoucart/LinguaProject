{% extends 'admin_layout.html.twig' %}

{% block title %}Tableau d'administration{% endblock %}

{% block page_title %}Tableau de bord{% endblock %}

{% block activeDashboard %}active{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Gestion du contenu</h2>
            </div>
            <div class="card-body p-0">
                <table class="table mb-0">
                    <tbody>
                        <tr>
                            <th style="width:40%" class="text-end text-muted py-3">Catégorie</th>
                            <td class="py-3">
                                <a href="{{ path('app_admin_category_index') }}" class="text-decoration-none">
                                    <i class="fas fa-list" aria-hidden="true"></i>
                                    Liste
                                </a>
                                <a href="{{ path('app_admin_category_new') }}" class="text-decoration-none me-2">
                                    <i class="fas fa-plus-circle" aria-hidden="true"></i>
                                    Ajouter
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <th class="text-end text-muted py-3">Article</th>
                            <td class="py-3">
                                <a href="{{ path('app_admin_article_index') }}" class="text-decoration-none">
                                    <i class="fas fa-list" aria-hidden="true"></i>
                                    Liste
                                </a>
                                <a href="{{ path('app_admin_article_new') }}" class="text-decoration-none me-2">
                                    <i class="fas fa-plus-circle" aria-hidden="true"></i>
                                    Ajouter
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <th class="text-end text-muted py-3">Fichier</th>
                            <td class="py-3">
                                <a href="{{ path('app_document_admin_index') }}" class="text-decoration-none">
                                    <i class="fas fa-list"></i> 
                                    Liste
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <th class="text-end text-muted py-3">Page</th>
                            <td class="py-3">
                                <a href="{{ path('app_page_admin_index') }}" class="text-decoration-none">
                                    <i class="fas fa-list" aria-hidden="true"></i>
                                    Liste
                                </a>
                                <a href="{{ path('app_page_admin_new') }}" class="text-decoration-none me-2">
                                    <i class="fas fa-plus-circle" aria-hidden="true"></i>
                                    Ajouter
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div> 
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h2 class="card-title">Administration</h2>
            </div>
            <div class="card-body p-0">
                <table class="table mb-0">
                    <tbody>
                        <tr>
                            <th style="width:40%" class="text-end text-muted py-3">Membres</th>
                            <td class="py-3">
                                <a href="{{ path('app_user_admin_index') }}" class="text-decoration-none">
                                    <i class="fas fa-list" aria-hidden="true"></i>
                                    Liste
                                </a>
                                <a href="{{ path('app_user_admin_new') }}" class="text-decoration-none me-2">
                                    <i class="fas fa-plus-circle" aria-hidden="true"></i>
                                    Ajouter
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <th class="text-end text-muted py-3">Sauvegardes</th>
                            <td class="py-3">
                                <a href="{{ path('app_backup_admin_index') }}" class="text-decoration-none">
                                    <i class="fas fa-list" aria-hidden="true"></i>
                                    Liste
                                </a>
                                <a href="{{ path('app_backup_admin_create') }}" class="text-decoration-none me-2">
                                    <i class="fas fa-plus-circle" aria-hidden="true"></i>
                                    Ajouter
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card card-info">
            <div class="card-body">
                <h2 class="fw-normal m-0 p-0">
                    <strong>{{ stats.article }}</strong>
                </h2>
                <p class="mt-2 mb-0 h5">Article{{ stats.article > 1 ? 's' : '' }}</p>
            </div>
            <div class="card-footer text-end">
                <a href="{{ path('app_admin_article_index') }}" class="text-decoration-none fw-bold text-white">
                    Voir plus <i class="fas fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>

        <div class="card card-info mt-2">
            <div class="card-body">
                <h2 class="fw-normal m-0 p-0">
                    <strong>{{ stats.category }}</strong>
                </h2>
                <p class="mt-2 mb-0 h5">Catégorie{{ stats.category > 1 ? 's' : '' }}</p>
            </div>
            <div class="card-footer text-end">
                <a href="{{ path('app_admin_category_index') }}" class="text-decoration-none fw-bold text-white">
                    Voir plus <i class="fas fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>
        
        <div class="card card-info mt-2">
            <div class="card-body">
                <h2 class="fw-normal m-0 p-0">
                    <strong>{{ stats.document }}</strong>
                </h2>
                <p class="mt-2 mb-0 h5">Document{{ stats.document > 1 ? 's' : '' }}</p>
            </div>
            <div class="card-footer text-end">
                <a href="{{ path('app_document_admin_index') }}" class="text-decoration-none fw-bold text-white">
                    Voir plus <i class="fas fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
