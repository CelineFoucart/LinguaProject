{% extends 'admin_layout.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block page_title %}Articles{% endblock %}

{% block breadcrumb_items %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb justify-content-end">
            <li class="breadcrumb-item"><a href="{{ path('app_admin_dashboard') }}">Dashboard</a></li>
            <li class="breadcrumb-item active">Articles</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
{% for message in app.flashes('error') %}
    <div class="alert alert-danger">
        {{ message }}
    </div>
{% endfor %}
{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
<div class="card">
    <div class="card-header">
        <div class="float-end">
            <a href="{{ path('app_admin_article_new') }}" class="btn btn-light btn-sm border"><i class="fas fa-plus-circle"></i> Ajouter</a>
        </div>
        <h2 class="card-title">Liste des articles</h2>
        
    </div>
    <div class="card-body">
        <table id="table" class="table table-striped mb-0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Lien</th>
                    <th>Catégorie</th>
                    <th>Date de création</th>
                    <th>Dernière mise à jour</th>
                    <th data-orderable="false">actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    const route = "{{ path('app_api_article_index') }}";

    $(document).ready(function () {
        $('#table').DataTable({
            pagingType: 'first_last_numbers',
            processing: true,
            serverSide: true,
            columns: [ 
                { data: "id", name:"a.id" }, 
                { data: "title", name:"a.title" }, 
                { data: "slug", name:"a.slug" }, 
                { 
                    data: "category", 
                    name:"c.title",
                    render: function( data, type, row ) {
                        if (!data) {
                            return "";
                        }
                        return `<a href="/admin/category/${data.id}">
                            ${data.title}
                        </a>`;
                    }
                }, 
                { 
                    data: "createdAt", 
                    name:"a.createdAt",
                    render: function ( data, type, row ) {
                        if (!data) {
                            return "";
                        }
                        const date = new Date(data);
                        let month = (date.getMonth()+1);
                        if (month < 9) {
                            month = '0' + month;
                        }

                        let minutes = date.getMinutes();
                        if (minutes < 9) {
                            minutes = '0' + minutes;
                        }
                        return date.getDate() + '/' + month + '/' + date.getFullYear() + ' ' + date.getHours() + ':' + minutes;
                    } 
                },
                { 
                    data: "updatedAt", 
                    name:"a.updatedAt",
                    render: function ( data, type, row ) {
                        if (!data) {
                            return "";
                        }
                        const date = new Date(data);
                        let month = (date.getMonth()+1);
                        
                        if (month < 9) {
                            month = '0' + month;
                        }

                        let minutes = date.getMinutes();
                        if (minutes < 9) {
                            minutes = '0' + minutes;
                        }
                        return date.getDate() + '/' + month + '/' + date.getFullYear() + ' ' + date.getHours() + ':' + minutes;
                    }
                }, 
                { 
                    data: "actions", 
                    name:null, 
                    render: function ( data, type, row ) {
                        return `<a href="/admin/article/${row.id}" class="btn btn-primary btn-sm">
                            <i class="fas fa-eye"></i> Voir
                        </a>
                        <a href="/admin/article/${row.id}/edit" class="btn btn-success btn-sm">
                            <i class="fas fa-pencil-alt"></i> Editer
                        </a>`;
                    }
                }
            ],
            ajax: route,
            language: {
                url: '/assets/DataTables/i18n/fr-FR.json',
            },
        });
    });
</script>
{% endblock %}
