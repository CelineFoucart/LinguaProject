<form method="post" class="d-inline" action="{{ path('app_admin_article_delete', {'id': article.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cet élément ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <button class="btn btn-danger btn-sm d-inline"><i class="fas fa-trash"></i> Supprimer</button>
</form>
