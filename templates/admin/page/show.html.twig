{% extends 'admin_layout.html.twig' %}

{% block title %}Voir "{{ page.title }}"{% endblock %}

{% block page_title %}Voir <strong>{{ page.title }}</strong>{% endblock %}

{% block breadcrumb_items %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb justify-content-end">
            <li class="breadcrumb-item"><a href="{{ path('app_admin_dashboard') }}">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_page_admin_index') }}">Pages</a></li>
            <li class="breadcrumb-item active">{{ page.title }}</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <div class="float-end">
                <a href="{{ path('app_page', {'slug': page.slug}) }}" class="btn btn-primary btn-sm me-1">
                    <i class="fas fa-book-reader"></i> Consulter
                </a>
                <a href="{{ path('app_page_admin_edit', {'id': page.id}) }}" class="btn btn-success btn-sm me-1">
                    <i class="fas fa-pencil-alt"></i> Editer
                </a>
                {{ include('/admin/page/_delete_form.html.twig') }}
            </div>
            <h2 class="card-title">{{ page.title }}</h2>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped m-0">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ page.id }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ page.title }}</td>
                    </tr>
                    <tr>
                        <th>Lien</th>
                        <td>{{ page.slug }}</td>
                    </tr>
                    <tr>
                        <th>Contenu</th>
                        <td>{{ page.content|raw }}</td>
                    </tr>
                </tbody>
            </table>
        </div> 
    </div>
{% endblock %}
