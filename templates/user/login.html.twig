{% extends 'base.html.twig' %}

{% block stylesheets %}
<style>
main {
    height:100%;
}
</style>			
{% endblock %}

{% block title %}Connectez-vous{% endblock %}

{% block body %}
<article class="h-100 d-flex align-items-center justify-content-center">
    <div class="login-box">
        <h1 class="h3 text-center mb-3 fw-normal"><a href="{{ path('app_home') }}" class="login-link">{{ app_name }}</a></h1>
        <div class="login-card">
            <p class="small mb-4 text-center text-muted">Connectez-vous pour gérer le site</p>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">Mot de passe ou pseudo invalide</div>
                {% endif %}

                <div class="input-group mb-4">
                    <input type="text" value="{{ last_username }}" placeholder="Pseudo" name="username" id="inputUsername" class="form-control" aria-describedby="basic-addon1" autocomplete="username" required autofocus>
                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-user"></i></span>
                </div>

                <div class="input-group mb-3">
                    <input type="password" name="password" placeholder="Mot de passe" id="inputPassword" class="form-control" aria-describedby="basic-addon2" autocomplete="current-password" required>
                    <span class="input-group-text" id="basic-addon2"><i class="fas fa-lock"></i></span>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="form-check mb-3">
                    <input class="form-check-input" id="rememberMe" type="checkbox" name="_remember_me"> 
                    <label class="form-check-label" for="rememberMe">
                        <span class="fw-bold text-muted">Se souvenir de moi</span>
                    </label>
                </div>

                <button class="btn btn-primary btn-sm w-100 mb-3" type="submit">
                    <i class="fas fa-sign-in-alt me-1"></i> Connexion
                </button>

                {# <p class="mb-1">
                    <a href="#" class="text-decoration-none">J'ai oublié mon mot de passe</a>
                </p> #}
            </form>
        </div>
    </div>
</article>
{% endblock %}
