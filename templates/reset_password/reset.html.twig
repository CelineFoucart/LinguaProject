{% extends 'base.html.twig' %}

{% block stylesheets %}
<style>
main {
    height:80%;
}
</style>			
{% endblock %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <article class="h-100 d-flex align-items-center justify-content-center">
        <div class="login-box">
            <h1 class="h3 text-center mb-3 fw-normal">Réinitialisation du mot de passe</h1>
            <div class="login-card">
                {{ form_start(resetForm) }}
                    {{ form_row(resetForm.plainPassword) }}
                    <button class="btn btn-primary btn-sm w-100 mb-3">Réinitialiser</button>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </article>  
{% endblock %}
